; Global Settings
margin-bottom = 4
margin-top = 4

; Colors
[colors]
background = #222
background-alt = #444
foreground = #DFDFDF
foreground-alt = #55
primary = #FFB52A
secondary = #E60053
alert = #BD2C40

amareloescuro = #ECD078
amareloouro = #FFD700
azulsky = #00BFFF
azulclaro = #63B6D9
azulescuro = #20312F
cinza = #DCDEDB
cinzaclaro = #E8E8E8
cinzaescuro = #172D3A
escuro = #1C252E
verde = #8A9B0F
verdeclaro = #32CD32
vermelho = #FF0000
vermelhoclaro = #FE4365
vermelhoescuro = #8E1632


; Topbar
[bar/top]
width = 100%
height = 26
fixed-center = true

background = ${colors.escuro}
foreground = ${colors.foreground}

padding-left = 2
padding-right = 2

module-margin-left = 2
module-margin-right = 2

font-0 = xos4 Terminess Powerline:size=10;2
font-1 = FontAwesome:size=10;2

modules-left = cpu memory temperature
modules-center = xwindow
modules-right = eth wlan

; Bottombar
[bar/bot]
width= 100%
height = 26
fixed-center = true
bottom = true

background = ${colors.escuro}
foreground = ${colors.foreground}

padding-left = 1
padding-right = 1

module-margin-left = 1
module-margin-right = 1

font-0 = xos4 Terminess Powerline:pixelsize=12;2
font-1 = FontAwesome:pixelsize=10;2

modules-left = i3
modules-center = spotify
modules-right = crypto backlight-acpi volume battery date

tray-position = right
tray-padding = 3
tray-background = ${colors.escuro}

cursor-click = pointer
cursor-scroll = ns-resize

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

; MODULES ;

; Xwindow
[module/xwindow]
type = internal/xwindow
label = %title:0:50:...%
label-foreground = ${colors.cinzaclaro}

; Filesystem
[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /home

label-mounted = " %mountpoint%: %used% of %total%"
label-mounted-foreground = ${colors.cinzaclaro}

; i3
[module/i3]
type = internal/i3
index-sort = true
strip-wsnumbers = true
;format = <label-state> <label-mode> <ws-icon>
;wrapping-scroll = false

label-focused = %index%: %icon%
label-focused-foreground = ${colors.cinzaescuro}
label-focused-background = ${colors.cinzaclaro}
label-focused-padding = 1

label-unfocused = %index%: %icon%
label-unfocused-padding = 1
label-unfocused-foreground = ${colors.cinzaclaro} 

label-urgent = %index%: %icon%
label-urgent-foreground = ${colors.vermelhoclaro}
label-urgent-padding = 1

ws-icon-1 = "1; www"
ws-icon-2 = "2; telegram"
ws-icon-3 = "3; terminal"
ws-icon-4 = "4; files"
ws-icon-5 = "5; music"
ws-icon-6 = "6; windows"
ws-icon-7 = "7; code"
ws-icon-8 = "8;"
ws-icon-9 = "9;"
ws-icon-0 = "10;"
ws-icon-default = ""

; Xbacklight
[module/xbacklight]
type = internal/xbacklight

format = <label>
format-foreground = ${colors.cinzaclaro}
label = " %percentage%%"

; Backlight-acpi
[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

; CPU
;[module/cpu]
;type = internal/cpu
;interval = 1
;format = <label> <ramp-coreload>
;format-foreground = ${colors.cinzaclaro}
;label = " CPU %percentage:2%%"
;label = " CPU "

;ramp-coreload-0 = ▁
;ramp-coreload-1 = ▂
;ramp-coreload-2 = ▃
;ramp-coreload-3 = ▄
;ramp-coreload-4 = ▅
;ramp-coreload-5 = ▆
;ramp-coreload-6 = ▇
;ramp-coreload-7 = █

; CPU
[module/cpu]
type = internal/cpu
