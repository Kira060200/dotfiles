;format-full-prefix = "ÔâÄ "
;format-full-prefix-foreground = ${colors.verde}

ramp-capacity-0 = "%{F#FF0000}ÔâÑ%{F-}"
ramp-capacity-1 = "%{F#FF0000}ÔâÉ%{F-}"
ramp-capacity-2 = "%{F#e4b226}ÔâÇ%{F-}"
ramp-capacity-3 = "%{F#98de00}ÔâÅ%{F-}"
ramp-capacity-4 = "%{F#98de00}ÔâÄ%{F-}"

