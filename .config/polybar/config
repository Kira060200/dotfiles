animation-charging-1 = "%{F#FF0000}ÔâÉ%{F-}"
animation-charging-2 = "%{F#e4b226}ÔâÇ%{F-}"
animation-charging-3 = "%{F#98de00}ÔâÅ%{F-}"
animation-charging-4 = "%{F#98de00}ÔâÄ%{F-}"
animation-charging-framerate = 350

[module/temperature]
;type = internal/temperature
type = custom/script
exec-if = sensors
exec = sensors | grep Core | awk '{print substr($3, 2, 2)}' | tr '\n' ' ' | sed 's/ /¬∞C  /g' | sed 's/  $//'
format-padding = 2

format-prefix = "Ôãá " 
format-prefix-foreground = #FE4365

