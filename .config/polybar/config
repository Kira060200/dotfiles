; Memory
; [module/memory]
;type = internal/memory
;interval = 1

;format = <label>
;format-foreground = ${colors.cinzaclaro}
;label = " RAM %gb_used%"

; Memory (2)
[module/memory]
type = internal/memory
interval = 1
format = <label> <bar-used>

;label = " RAM %gb_used% of %gb_total%"
label = "RAM"

bar-used-indicator =
bar-used-width = 40
bar-used-foreground-0 = #55aa55
bar-used-foreground-1 = #557755
bar-used-foreground-2 = #f5a70a
bar-used-foreground-3 = #ff5555
bar-used-fill = ▐
bar-used-empty = ▐
bar-used-empty-foreground = #444444

; Wireless
[module/wlan]
type = internal/network
interface = wlp3s0
interval = 1.0
 
format-connected = <label-connected>

label-connected = " %essid% %local_ip%  %downspeed%"
label-connected-foreground = ${colors.cinzaclaro}

label-disconnected = "No Wi-Fi connected"
label-disconnected-foreground = ${colors.vermelhoclaro}

; Ethernet
[module/eth]
type = internal/network
interface = enp2s0
interval = 1.0

format-connected = <label-connected>

label-connected = " %local_ip%  %downspeed% %linkspeed%"
label-connected-foreground = ${colors.cinzaclaro}

label-disconnected = "LAN off"
label-disconnected-foreground = ${colors.vermelhoclaro}

; Date
[module/date]
type = internal/date
interval = 1

;date =
;date-alt = " %Y-%m-%d"

time = "%b %d, %H:%M"
label = %time%

label-foreground = ${colors.cinzaclaro}

; Volume
[module/volume]
type = internal/volume

format-volume = <label-volume>

label-volume = " %percentage%%"
label-volume-foreground = ${colors.cinzaclaro}

label-muted = " Mute"
label-muted-foreground = ${colors.vermelhoclaro}

; Battery
[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98
 
format-charging = <animation-charging> <label-charging>
format-charging-prefix = " Charging "
 
format-discharging = <ramp-capacity><label-discharging>

label-discharging = %percentage%% %time%
label-full = " %percentage%%"
label-discharging-foreground = ${colors.cinzaclaro}
;format-full-prefix = " "
;format-full-prefix-foreground = ${colors.verde}

ramp-capacity-0 = " "
ramp-capacity-1 = " "
ramp-capacity-2 = " "
ramp-capacity-3 = " "
ramp-capacity-4 = " "
ramp-capacity-0-foreground = ${colors.vermelhoescuro}
ramp-capacity-1-foreground = ${colors.vermelhoclaro}
ramp-capacity-2-foreground = ${colors.amareloescuro}

animation-charging-0 = ""
animation-charging-1 = ""
animation-charging-2 = ""
animation-charging-3 = ""
animation-charging-4 = ""
animation-charging-framerate = 350

; Temperature 
[module/temperature]
type = custom/script
thermal-zone = 0
interval = 2
exec-if = sensors
exec = sensors | grep Core | awk '{print substr($3, 2, 2)}' | tr '\n' ' ' | sed 's/ /°C  /g' | sed 's/  $/    /'

format-prefix = " CPU "
format-foreground = ${colors.cinzaclaro}

;;;;;;

; Spotify custom
[module/spotify]
type = custom/script
format-prefix = " "
format-foreground = ${colors.verde}
exec = $HOME/.config/polybar/scripts/music

; Crypto
[module/crypto]
type = custom/script
exec = ~/.config/polybar/scripts/crypto
interval = 600

