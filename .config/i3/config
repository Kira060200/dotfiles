# Abrir Firefox
bindsym $mod+f exec firefox

# Abrir Chromium
bindsym $mod+c exec chromium

# Abrir Telegram
bindsym $mod+t exec telegram-desktop

# Abrir Thunar
bindsym $mod+Ctrl+e exec thunar

# Abrir Windows 7 VM
bindsym $mod+Ctrl+w exec /usr/lib/virtualbox/VirtualBox --comment "Windows 7 (DGR)" --startvm "ff46af8b-d8c2-48e0-ae34-d1277989919c"

