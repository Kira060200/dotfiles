####### Arquivos inicializados no i3 ########

exec --no-startup-id blueman-applet
exec --no-startup-id xfce4-clipman
exec --no-startup-id nm-applet
exec --no-startup-id dunst
exec --no-startup-id compton
exec_always --no-startup-id $HOME/.config/polybar/launch.sh

#############################################

# set nitrogen wallpaper at startup
exec nitrogen --restore

###################

# set win key as $mod
set $mod Mod4

# font for windo titles
#font pango:Cantarell 10

# start rofi program launcher
bindsym $mod+d exec "rofi -show drun"

# rofi alt+tab show
bindsym Mod1+Tab exec rofi -show window

# start dmenu (program launcher)
bindsym XF86Search exec dmenu_run

# abrir terminal
bindsym $mod+Return exec urxvt

# kill janela 
bindsym $mod+Shift+q kill

# captura de tela
bindsym Print exec xfce4-screenshooter 

########################
#   Hotkeys/Atalhos    #
########################

bindsym XF86AudioRaiseVolume exec amixer sset Master 1%+
bindsym XF86AudioLowerVolume exec amixer sset Master 1%-
bindsym XF86AudioMute exec amixer sset Master toggle
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# bloquear tela
bindsym $mod+x exec betterlockscreen --lock

# recarregar polybar
bindsym $mod+Shift+p exec --no-startup-id ~/.config/polybar/launch.sh

# recarregar o arquivo de configuração
bindsym $mod+Shift+c reload

# reiniciar i3 (preserva a sessão/layout, pode ser usado para atualizar o i3)
bindsym $mod+Shift+r restart

# sair do i3 (logout da sessão X)
# bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Deseja encerrar a sessão?' -b 'Sim' 'i3-msg sair'"
mode "[l]ogout, [d]esligar, [r]einiciar, [s]uspender" { 
	bindsym l exec i3-msg exit
	bindsym d exec systemctl poweroff
	bindsym r exec systemctl reboot
	bindsym s exec systemctl suspend

	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym $mod+Shift+e mode "[l]ogout, [d]esligar, [r]einiciar, [s]uspender"

##############################
#       Window Config        #
##############################

##### Configuração de janelas #####

# espaço entre as janelas
gaps inner 15
gaps outer 15

# remove blue window bar i3 uses
for_window [class="^.*"] border pixel 1
new_window pixel 0

# definir workspaces
#set $ws1 "1:  www"
#set $ws2 "2:  telegram"
#set $ws3 "3:  terminal"
#set $ws4 "4:  files"
#set $ws5 "5:  music"
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"

# mudar para workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9

# mover janela para workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# change focus
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+l focus up
bindsym $mod+semicolon focus right

# alternatively, you can use the cursor keys
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+h split horizontal

# split in vertical orientation
bindsym $mod+v split vertical

# enter fullscreen mode for the focused container
# bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, togglesplit
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

# use mouse + $mod to drag floating window to their wanted position
floating_modifier $mod

# redimensionar janelas
mode "resize" {
	bindsym Left resize shrink width 3 px or 3 ppt
	bindsym Down resize grow height 3 px or 3 ppt
	bindsym Up resize shrink height 3 px or 3 ppt
	bindsym Right resize grow width 3 px or 3 ppt

	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

####################################
#            Regras i3             #
####################################

for_window [window_role="pop-up"] floating enable, move position center
for_window [window_role="bubble"] floating enable, move position center
for_window [window_role="task_dialog"] floating enable, move position center
for_window [window_role="Preferences"] floating enable, move position center
for_window [window_role="dialog"] floating enable, move position center

assign [class="^Firefox"] $ws1
assign [class="^Telegram"] $ws2
assign [class="(?i)urxvt"] $ws3
assign [class="^Thunar"] $ws4
assign [class="^Spotify"] $ws5
assign [class="(?i)virtualbox"] $ws6
assign [class="(?i)code"] $ws7

for_window [class="^Nitrogen"] floating enable, move position center
for_window [class="^Thunar"] floating enable, move position center
for_window [class="^Personalizar"] floating enable, move position center
for_window [class="^Ristretto"] floating enable, move position center
for_window [class="^Remmina"] floating enable, move position center
for_window [class="^Mousepad"] floating enable, move position center
for_window [class="^Brasero"] floating enable, move position center
for_window [class="(?i)urxvt"] floating enable, border pixel 0
for_window [class="(?i)nm-connection-editor"] floating enable, move position center
for_window [class="(?i)virtualbox"] floating enable, move position center
for_window [class="(?i)lxappearance"] floating enable, move position center
for_window [class="(?i)gnome-calculator"] floating enable, move position center
for_window [class="(?i)android-file-transfer"] floating enable, move position center
for_window [class="(?i)blueman-manager"] floating enable, move position center

